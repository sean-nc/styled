
<% if current_user?(@user) %>
  <%= link_to "New Post", new_user_post_path(current_user) %>
<% end %>

<%= render 'follow_form' if user_signed_in? %>

<section class="stats">
  <%= render 'shared/stats' %>
</section>

<% if @user.avatar? %>
  <%= image_tag @user.image.url %>
<% else %>
  Default Avatar
<% end %>

<%= @user.username %>

<% if @posts %>
  <div id="my-posts">
    <%= render @posts %>
  </div>
<% else %>
  <h2>no posts</h2>
<% end %>


<div id="infinite-scrolling" style="display: none;">
  <%= will_paginate @posts %>
</div>