<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="main-container">
      <% flash.each do |message_type, message| %>
        <div class="uk-text-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="">
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
